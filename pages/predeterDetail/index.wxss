/* pages/predeterDetail/index.wxss */
.fl {
  float: left
}
.fr {
  float: right
}
.clearfix::before {
  content: "";
  display: table
}
.clearfix::after {
  content: "";
  display: table;
  clear: both;
}

page {
  background-color: #f8f8f8;
}
.product {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.product .img {
  width: 222rpx;
  height: 200rpx;
  margin-right: 36rpx;
}
.product .img image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.product>.fr {
  height: 200rpx;
  width: calc(100% - 266rpx);
  position: relative;
}
.product .title {
  font-size: 34rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.product .priceNum {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
}
.priceNum .price {
  font-size: 26rpx;
  color: #C71B1B;
}
.priceNum .price text {
  font-size: 42rpx;
}

.priceNum .num_ {
  color: #333;
  font-size: 30rpx;
}

.info,.message {
  padding: 30rpx 30rpx 26rpx;
  color: #333;
  font-size: 34rpx;
}
.info text,.message text {
  position: relative;
  display: block;
  padding-left: 30rpx;
}
.info text::before,.message text::before {
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 24rpx;
  background-color: #C71B1B;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -12rpx;
}
.infoContent {
  background-color: #fff;
  padding-left: 30rpx;
}
.infoContent .list {
  height: 90rpx;
  width: 100%;
  line-height: 90rpx;
}
.infoContent .list .fl {
  width: 30rpx;
  height: 31rpx;
  margin-right: 31rpx;
  margin-top: 31rpx
}
.infoContent .list:nth-of-type(3) .fl {
  width: 20rpx;
}
.infoContent .list:nth-of-type(4) .fl {
  width: 23rpx;
}
.infoContent .list .fl image {
  display: block;
  width: 100%;
  height: 100%;
}
.infoContent .list .fr {
  display: block;
  height: 90rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-right: 60rpx;
  width: 83%;
  position: relative
}
.infoContent .list .fr input,.infoContent .list .fr view {
  line-height: 90rpx;
  height: 90rpx;
  font-size: 30rpx;
  color: #999;
}
.infoContent .list .fr .placeholder {
  font-size: 30rpx;
  color: #999;
}
.infoContent .list .fr text {
  position: absolute;
  right: 30rpx;
  top: 50%;
  font-size: 30rpx;
  color: #C71B1B;
  margin-top: -45rpx;
}
.messageContent {
  padding: 30rpx;
  background-color: #fff;
  height: 160rpx;
}
.messageContent textarea {
  min-height: 160rpx;
  font-size: 30rpx;
  color: #999;
  width: 100%;
  height: 100%;
}
.messageContent textarea.placeholder {
  font-size: 30rpx;
  color: #999;
}

/* predetermine  */
.predetermine {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  box-shadow: -1px -1px 1px rgba(150,150,150,0.2) ;
  height: 98rpx;
  width: 100%;
  padding: 0 30rpx;
}
.predetermine .total {
  font-size: 32rpx;
  color: #333;
  line-height: 98rpx;
}
.predetermine .total text:first-of-type {
  margin-left: 29rpx;
  font-size: 26rpx;
  color: #C71B1B;
}
