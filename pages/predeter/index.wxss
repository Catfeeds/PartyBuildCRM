/* pages/predeter/index.wxss */
.clearfix::before {
  content: '';
  display: table;
}

.clearfix::after {
  content: '';
  display: table;
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

page {
  background-color: #F8F8F8;
}

.predeter-item {
  margin-top: 20rpx;
  height: 200rpx; 
}

.predeter-item>view {
  position: absolute;
  background-color: #fff;
  width: calc(100% + 100rpx);  
}

.predeter-item .predeter-item-top {
  display: inline-block;
}

.predeter-item .predeter-item-top navigator {
  display: inline-block;
  padding: 20rpx 30rpx;
  width: calc(100vw - 60rpx); 
  height: 100%;
}

.predeter-item .img {
  display: inline-block;
  width: 180rpx;
  height: 160rpx;
  margin-right: 30rpx;
}

.predeter-item .img image {
  display: inline-block;
  width: 100%;
  height: 100%;
}

.predeter-item .content {
  width: calc(100vw - 270rpx);
  height: 160rpx;
  position: relative;
}

.predeter-item .title {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
  font-size: 30rpx;
}

.predeter-item .note {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}

.predeter-item .note .price {
  color: #C71B1B;
  font-size: 18rpx;
}

.predeter-item .note .price text {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 6rpx;
}

.predeter-item .note .num {
  color: #999;
  font-size: 30rpx
}

.predeter-item .posit {
  width: 100rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background-color: #C71B1B;
  display: inline-block;
}

.predeter-item .posit image {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
}