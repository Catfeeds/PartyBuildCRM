/* pages/search/index.wxss */
/** 整个区域 */
.wxSearch{
  position: absolute;
  top: 98rpx;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(200, 200, 200, 0.1);
  z-index: 9999;
}

/** 搜索框下面的提示区域 */
.wxSearchInner{
  background-color: #fff;
}

/** 搜索热点标题 */
.wxSearchTitle{
  display: block;
  padding: 20rpx 10rpx 10rpx 20rpx;
  font-size: 26rpx;
  text-align: left;
}

/** 提示样式 */
.wxSearchMindKeyItem{
  padding: 20rpx 10rpx 20rpx 30rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 26rpx;
}

/** 标签样式 */
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
}

/** 标签样式 */
.wxSearchKeyItem{
  flex: 0 0 18%;
  font-size: 26rpx;
  text-align: center;
  border: 1px solid #eee;
  margin: 10rpx;
  padding: 8rpx 10rpx 8rpx 10rpx;
  border-radius: 0px;
  background-color: rgba(200, 200, 200, 0.1);
}

/** 搜索记录标题栏 */
.wxSearchHistoryItem{
  padding-left: 20rpx;
  padding-top: 20prx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
}

/** 搜索记录标题 */
.wxSearchHistoryItemTitle{
  flex: 8;
  font-size: 26rpx;
}

/** 搜索记录删除按钮 */
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 26rpx;
  text-align: center;
  padding-top:2px;
  padding-bottom: 2px;
  border: 1px solid #eee;
  border-radius: 2px;
}

