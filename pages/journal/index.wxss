/* pages/journal/index.wxss */
page {
  background-color: #f8f8f8;
}

.fl {
  float: left
}
.fr {
  float: right
}
.clearfix::before {
  display: table;
  content: '';
}
.clearfix::after {
  display: table;
  content: '';
  clear: both;
}

.section {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  position: relative;
  background-color: #fff;
}

.section image {
  width: 12rpx;
  height: 22rpx;
  display: inline-block;
}

.section>view {
  display: inline-block;
  width: 20%;
  height: 100%;
}

.section .left {
  text-align: right
}

.section .right {
  text-align: left
}

.section picker {
  width: 60%;
  display: inline-block;
  height: 100%;
}

.section .picker {
  color: #333;
  font-size: 32rpx;
}

/* content  */
.content {
  margin-top: 20rpx;
  background-color: #fff;
  min-height: 500rpx;
  padding: 37rpx 31rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 48rpx;
  position: relative
}

.content textarea {
  display: block;
  width: 100%;
  height: 400rpx;
}

.content .btn {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  left: 0;
  text-align: right
}

.content .btn view {
  padding: 15rpx;
  margin-right: 15rpx;
  font-size: 30rpx;
  display: inline-block
}

.content .btn .cancle {
  color: #666;
}

.content .btn .sure {
  color: #C71B1B
}

/* button  */
button {
  position: fixed;
  z-index: 5;
  bottom: 0;
  left: 0;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  color: #c71b1b;
  font-size: 30rpx;
  display: block;
  border: 0;
  width: 100%;
  border-radius: 0;
}

button image {
  display: inline-block;
  width: 27rpx;
  height: 30rpx;
  margin-right: 49rpx;
}