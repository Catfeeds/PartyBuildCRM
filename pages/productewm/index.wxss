/* pages/productewm/index.wxss */
page {
  background-color: #f8f8f8;
}

.bg {
  width: 100%;
  height: 100vh;
}

.bg image {
  display: block;
  width: 100%;
  height: 100%;
}

.code {
  position: absolute;
  display: block;
  width: calc(100% - 160rpx);
  height: 100vw;
  background-color: #fff;
  border-radius: 30rpx;
  left: 50rpx;
  top: 3.2rem;
  padding: 30rpx;
}

.code canvas {
  width: calc(100% - 60rpx);
  height: 90%;
}

.code .txt {
  color: #666;
  text-align: center;
  font-size: 28rpx;
}
