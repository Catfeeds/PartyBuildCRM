/* pages/user/index.wxss */
@import "/pages/tabbar/index.wxss";
page {
  background-color: #fff;
}

/* banner  */
.banner {
  position: relative;
  height: 80vw;
}

.banner>image {
  display: block;
  width: 100%;
  height: 100%;
}

.banner view {
  position: absolute;
  top: 25vw;
  left: 50%;
  transform: translate(-50%,0);
  text-align: center
}

.banner view image {
  width: 210rpx;
  height: 210rpx;
  display: inline-block;
  border-radius: 100%
}

.banner view text {
  margin-top: 30rpx;
  display: block;
  color: #333;
  font-size: 36rpx;
}

/* lists  */
.lists .list {
  border-bottom: 1px solid #F0F0F0;
  height: 98rpx;
  line-height: 98rpx;
}

.list image:first-of-type {
  display: inline-block;
  width: 44rpx;
  height: 37rpx;
  margin: 30.5rpx;
}

.list:nth-of-type(2) image:first-of-type {
  height: 42rpx;
  margin-top: 27.5rpx;
}

.list:nth-of-type(3) image:first-of-type {
  height: 44rpx;
  width: 34rpx;
  margin-top: 26rpx
}

.list:nth-of-type(4) image:first-of-type {
  height: 38rpx;
  width: 38rpx;
  margin-top: 30.5rpx
}

.list:nth-of-type(5) image:first-of-type {
  height: 39rpx;
  margin-top: 29rpx;
}

.list view {
  font-size: 34rpx;
  color: #333;
}

.list image:last-of-type {
  width: 26rpx;
  height: 13rpx;
  display: inline-block;
  transform: rotate(-90deg);
  margin-top: 42.5rpx;
  margin-right: 30rpx;
}