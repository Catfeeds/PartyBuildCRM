/* pages/productLink/index.wxss */
.bg {
  width: 100%;
  height: 100vh;
}

.bg image {
  display: block;
  width: 100%;
  height: 100%
}

.content {
  position: absolute;
  display: block;
  padding: 60rpx;
  text-align: center;
  top: 10%;
  left: 0;
  width: calc(100% - 120rpx);
}

.content .tit {
  color: #fff;
  font-size: 36rpx;
}

.content .tit image {
  width: 60rpx;
  height: 52rpx;
  display: inline-block;
  margin-right: 35rpx
}

.content navigator {
  display: block;
  margin: 57rpx auto 88rpx;
  color: #fff;
  font-size: 36rpx;
}

.content .tig {
  color: #fff;
  font-size: 48rpx;
}

.bottom {
  position: fixed;
  bottom: 98rpx;
  width: calc(100% - 140rpx);
  left: 70rpx;
  text-align: center;
  color: #333;
  font-size: 30rpx;
  line-height: 30rpx;
  display: table
}

.bottom text {
  display:table-cell;
  vertical-align:middle;
}

.bottom text:nth-of-type(2n+1) {
  display: inline-block;
  width: 30rpx;
  height: 4rpx;
  background-color: #554F4A
}