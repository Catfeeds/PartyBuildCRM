/* pages/newDetail/index.wxss */
.fl {
  float: left
}

.fr {
  float: right
}

.clearfix::before {
  display: table;
  content: ''
}

.clearfix::after {
  display: table;
  content: '';
  clear: both;
}

.detailtitle,.detailContent {
  padding: 0 30rpx;
  background-color: #fff
}

.detailContent {
  padding-top: 27rpx;
  margin-bottom: 20rpx;
}

.detailtitle>view {
  border-bottom: 1px solid #F0F0F0;
  padding: 31rpx 0 27rpx
}

.detailtitle .title {
  color: #333;
  font-size: 36rpx;
  text-align: left
}

.detailtitle .title text {
  display: inline-block;
  width: auto;
  text-align: center
}

.detailtitle .note {
  color: #999;
  font-size: 24rpx;
}

.detailtitle .note image {
  margin-right: 16rpx;
  height: 24rpx
}

.detailtitle .note .publisher image {
  width: 23rpx;
}

.detailtitle .note .timer image {
  width: 24rpx;
}

.detailContent .content {
  font-size: 28rpx;
  color: #666
}

.detailContent .content image {
  width: 100%!important;
  height: auto!important;
  display: inline-block
}

.detailContent .notes {
  color: #999;
  font-size: 30rpx;
}

.detailContent .notes image {
  width: 30rpx;
  display: inline-block;
  margin-right: 15rpx
}

.detailContent .notes .natigater image {
  height: 29rpx;
}

.detailContent .notes .read image {
  height: 23rpx;
}

/* comment  */
.comment .tig {
  height: 80rpx;
  color: #999;
  font-size: 28rpx;
  line-height: 80rpx;
  background-color: #fff;
  padding: 0 30rpx 0 85rpx;
  position: relative
}

.comment .tig image {
  width: 30rpx;
  height: 28rpx;
  display: inline-block;
  position: absolute;
  top: 50%;
  margin-top: -14rpx;
  left: 30rpx;
}

.comment .lists {
  background-color: #fff;
}

.comment .lists .list>.fl {
  width: 80rpx;
  height: 80rpx;
  margin: 30rpx 30rpx auto;
}

.comment .lists .list .fl image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.comment .lists .list>.fr {
  width: calc(100% - 170rpx);
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1px solid #F0F0F0;
}

.comment .lists .list .nameTime {
  margin-bottom: 25rpx;
}

.comment .lists .list .name {
  width: 70%;
  display: inline-block;
  color: #333;
  font-size: 28rpx;
}

.comment .lists .list .time {
  color: #999;
  font-size: 24rpx;
}

.comment .lists .list .content {
  color: #666;
  font-size: 26rpx;
  line-height: 44rpx;
}

.printIn {
  position: fixed;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
  bottom: 0;
  left: 0;
}

.printIn text {
  display: block;
  width: calc(100% - 60rpx);
  height: 52rpx;
  line-height: 52rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 18rpx;
}

.textareaIn {
  background-color: #fff;
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: calc(100% - 60rpx);
  z-index: 5
}

.textareaIn>view {
  position: relative;
   background-color: #F8F8F8;
   border-radius: 6rpx;
}

.textareaIn textarea {
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
  width: calc(100% - 40rpx);
  height: 150rpx;
}

.textareaIn textarea.placeholder {
  color: #999;
  font-size: 28rpx;
}

.textareaIn .clearfix {
  padding: 0 20rpx;
  height: 60rpx;
}

.textareaIn text {
  color: #999;
  font-size: 28rpx;
}

.textareaIn button {
  background-color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  width: 120rpx;
  box-shadow: 0 10rpx 10rpx #898989;
  border-radius: 20rpx;
  color: #C71B1B;
  font-size: 28rpx;
}

.shadow {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,.3);
  z-index: 3
}